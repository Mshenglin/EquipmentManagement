<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xu.dao.UserDao" >

    <!--登陆查询-->
    <select id="selectUserByUsernameAndPassword" parameterType="User" resultType="User">
        select * from all_user
        where
        <if test="username!=null and username!='' ">
            username = #{username}
        </if>
        <if test="password!=null and password!='' ">
            and password = #{password}
        </if>
    </select>

    <!--分页查询-->
    <select id="selectUserList" parameterType="User" resultType="User">
        select * from all_user
        <where>
            <if test="username!=null and username!='' ">
                and  username like  '%${username}%'
            </if>
            <if test="id!=null and id!=0">
                and  id like  '%${id}%'
            </if>
        </where>
        ORDER BY  id asc
        limit #{currentPage},#{pageSize}
    </select>
    <!--查询数据总数-->
    <select id="selectTotalCount" resultType="Integer">
        select count(id) from all_user
        <where>
            <if test="username!=null and username!='' ">
                and  username like  '%${username}%'
            </if>
            <if test="id!=null and id!=0">
                and  id like  '%${id}%'
            </if>
        </where>
    </select>

    <!--添加管理员信息-->
    <insert id="insertUser" parameterType="User" keyProperty="id" useGeneratedKeys="true">
        insert into all_user (username,password,name,phone,student_id,department_id,create_time,update_time,user_role)
        values(#{username},#{password},#{name},#{phone},#{studentId},#{departmentId},#{createTime},#{updateTime},#{userRole})
    </insert>

    <!--通过id删除管理员信息-->
    <delete id="deleteUser" parameterType="Long" >
        delete from all_user where id=#{id}
    </delete>

    <select id="selectUserById"  parameterType="Long" resultType="User" >
        select * from all_user where id=#{id}
    </select>

    <select id="selectAll" resultType="User">
        select * from all_user;
    </select>

    <!--修改管理员信息-->
    <update id="updateUser" parameterType="User">
        update all_user
        <set>
            <if test="username!=null and username !=''">
                username=#{username},
            </if>
            <if test="password !=null and password !=''">
                password=#{password},
            </if>
            <if test="name !=null and name !=''">
                name=#{name},
            </if>
            <if test="phone !=null and phone !=0">
                phone=#{phone},
            </if>
            <if test="studentId !=null and studentId !=''">
                student_id=#{studentId},
            </if>
            <if test="departmentId !=null and departmentId !=''">
                department_id=#{departmentId},
            </if>
            <if test="createTime !=null and createTime !=''">
                create_time=#{createTime},
            </if>
            <if test="updateTime !=null and updateTime !=''">
                update_time=#{updateTime},
            </if>
            <if test="userRole !=null and userRole !=''">
                user_role=#{userRole},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>
